{
  "bindings": [
    {
      "type": "httpTrigger",
      "authLevel": "anonymous",
      "direction": "in",
      "name": "req",
      "route": "user/{id}",
      "methods": [
        "get",
        "post"
      ]
    },
    {
      "type": "http",
      "direction": "out",
      "name": "res"
    },
    {
      "type": "cosmosDB",
      "direction": "in",
      "name": "user",
      "ConnectionStringSetting": "legendstats_DOCUMENTDB",
      "databaseName": "icenter",
      "collectionName": "icenterUsers",
      "sqlQuery": "SELECT * from c where c.id = {id}"
    },
    {
      "type": "cosmosDB",
      "direction": "in",
      "name": "userErors",
      "ConnectionStringSetting": "legendstats_DOCUMENTDB",
      "databaseName": "icenter",
      "collectionName": "icenterUsers",
      "sqlQuery": "SELECT * from c where c.info.userDetails = {id} and  c.type = 'error'"
    },
    {
      "type": "cosmosDB",
      "direction": "out",
      "name": "userPost",
      "ConnectionStringSetting": "legendstats_DOCUMENTDB",
      "databaseName": "icenter",
      "collectionName": "icenterUsers"
    }
  ]
}

